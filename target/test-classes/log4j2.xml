<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    
    <!-- Properties for reusable values -->
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="LOG_DIR">logs</Property>
        <Property name="LOG_FILE_NAME">automation-test</Property>
    </Properties>

    <Appenders>
        
        <!-- Console Appender - for real-time test execution monitoring -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <!-- Only show INFO and above in console to reduce noise -->
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
        
        <!-- Rolling File Appender - for detailed test logs with rotation -->
        <RollingFile name="RollingFile" 
                     fileName="${LOG_DIR}/${LOG_FILE_NAME}.log"
                     filePattern="${LOG_DIR}/${LOG_FILE_NAME}-%d{yyyy-MM-dd-HH-mm}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <!-- Create new log file when size exceeds 10MB -->
                <SizeBasedTriggeringPolicy size="10MB"/>
                <!-- Create new log file on each test run (time-based) -->
                <OnStartupTriggeringPolicy/>
            </Policies>
            <!-- Keep last 10 log files -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        
        <!-- Separate file for ERROR logs only - for quick debugging -->
        <RollingFile name="ErrorFile" 
                     fileName="${LOG_DIR}/errors.log"
                     filePattern="${LOG_DIR}/errors-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5MB"/>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        
        <!-- Reduce noise from Selenium WebDriver -->
        <Logger name="org.openqa.selenium" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
        
        <!-- Reduce noise from Apache HTTP Client (used by Selenium) -->
        <Logger name="org.apache.http" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
        
        <!-- Reduce noise from TestNG -->
        <Logger name="org.testng" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
        
        <!-- Your test code - set to DEBUG for detailed logging -->
        <Logger name="com.opencart" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>
        
        <!-- Page Objects and Utilities - detailed logging for debugging -->
        <Logger name="pages" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>
        
        <Logger name="utils" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <!-- Root Logger - catch-all for any unspecified packages -->
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Root>
        
    </Loggers>

</Configuration>
