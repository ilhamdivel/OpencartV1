<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    SMOKE TEST SUITE
    ================
    Purpose: Quick health check to verify critical functionalities work.
    When to Run: After every deployment, before running full regression.
    Duration: Should complete within 5-10 minutes.
    Scope: Only critical user journeys (login, registration, checkout, etc.)
-->

<suite name="Smoke Test Suite" 
       verbose="1" 
       parallel="none"
       configfailurepolicy="skip">

    <!-- Listeners for reporting and logging -->
<!--    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>
-->
    <!-- Parameters that can be used across tests -->
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="staging"/>

    <test name="Critical Path - User Registration">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="critical"/>
            </run>
        </groups>
        <classes>
            <class name="testCases.TC001_AccountRegistrationTest"/>
            <!-- Add more smoke test classes here -->
            <!-- <class name="testCases.TC002_LoginTest"/> -->
            <!-- <class name="testCases.TC003_SearchProductTest"/> -->
        </classes>
    </test>

    <!--
    <test name="Critical Path - Login">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="testCases.TC002_LoginTest"/>
        </classes>
    </test>
    -->

</suite>
