<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    PARALLEL EXECUTION SUITE
    ========================
    Purpose: Run tests in parallel to reduce overall execution time.
    When to Run: When you need faster feedback (CI/CD pipeline).
    
    Parallelization Strategies:
    ===========================================
    1. parallel="methods"  -> Methods in the same class run in parallel
    2. parallel="tests"    -> Each <test> tag runs in parallel
    3. parallel="classes"  -> Each class runs in parallel
    4. parallel="instances"-> Test instances run in parallel (for @Factory)
    
    Best Practices:
    - Use ThreadLocal for driver to avoid thread interference
    - Ensure tests are independent (no shared state)
    - Be mindful of resource constraints (browser instances, memory)
-->

<suite name="Parallel Execution Suite" 
       verbose="1" 
       parallel="classes"
       thread-count="3"
       configfailurepolicy="skip"
       data-provider-thread-count="2">

    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="staging"/>

    <!-- Parallel by Classes - Each class runs in its own thread -->
    <test name="Parallel Test Execution">
        <classes>
            <class name="testCases.TC001_AccountRegistrationTest"/>
            <!-- Add more test classes for parallel execution -->
            <!-- <class name="testCases.TC002_LoginTest"/> -->
            <!-- <class name="testCases.TC003_SearchProductTest"/> -->
            <!-- <class name="testCases.TC004_AddToCartTest"/> -->
        </classes>
    </test>

</suite>
