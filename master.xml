<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    DEFAULT TEST SUITE (testng.xml)
    ===============================
    Purpose: Default suite for development and quick local testing.
    
    Available Test Suites (in src/test/resources/testng-suites/):
    =============================================================
    1. smoke-suite.xml        - Quick health check (5-10 min)
    2. sanity-suite.xml       - Build stability tests (15-30 min)
    3. regression-suite.xml   - Full regression (1-4 hours)
    4. parallel-suite.xml     - Parallel execution for speed
    5. cross-browser-suite.xml - Multi-browser testing
    6. master-suite.xml       - Orchestrates all suites
    7. data-driven-suite.xml  - Parameterized testing
    8. failed-retry-suite.xml - Re-run failed tests
    9. environment-suite.xml  - Environment-specific testing
    
    How to Run Specific Suite:
    - Maven: mvn test -DsuiteXmlFile=src/test/resources/testng-suites/smoke-suite.xml
    - IDE: Right-click on XML file > Run As > TestNG Suite
-->

<suite name="Default Development Suite" 
       verbose="1" 
       parallel="none"
       thread-count="1"
       configfailurepolicy="skip">

    <!-- Listeners for reporting -->
<!--    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>-->

    <!-- Default Parameters -->
    <parameter name="browser" value="edge"/>
    <parameter name="os" value="windows"/>

    <!-- Default Test - All test classes -->
    <test name="Development Tests">
        <classes>
            <class name="testCases.TC001_AccountRegistrationTest"/>
            <class name="testCases.TC002_LoginTest"/>
<!--            <class name="testCases.TC003_LoginDDT"/>-->
            <!-- Add new test classes here as you develop them -->
        </classes>
    </test>

</suite>
